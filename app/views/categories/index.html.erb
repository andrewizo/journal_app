<!-- app/views/categories/index.html.erb -->
<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Category List</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  
    <% @categories.each do |category| %>
      <tr>
        <td class="category-name"><%= category.name %></td>
        <td class="category-actions">
          <%= link_to 'View', category_path(category), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning btn-sm' %>
          <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>

