<!DOCTYPE html>
<html>
<head>
  <title>Your Journal App</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      margin: 0;
    }

    main {
      flex: 1;
    }
  </style>
</head>
<body>

<header>
  <div class="container">
    <h1>Journalist</h1>
  </div>
</header>

<nav>
  <div class="navbar-container">
    <div class="navbar-left">
      <%= link_to 'Dashboard', root_path, class: 'dashboard-link' %>
      <%= link_to 'Categories', categories_path %>
    </div>
    <div class="navbar-right">
      <% if logged_in? %>
        <%= button_to 'Logout', logout_path, method: :delete, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </div>
  </div>
</nav>



<main>
  <div class="container">
    <%= yield %>
  </div>
</main>

<footer>
  <div class="container">
    <p>&copy; <%= Time.now.year %> Your Journal App. All rights reserved.</p>
  </div>
</footer>

</body>
</html>
