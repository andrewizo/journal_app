<h1>Welcome to Your Dashboard, <%= current_user.email %>!</h1>


<section>
  <h2>Tasks Due Today</h2>
  <% if @tasks_due_today_by_category.present? %>
    <% @tasks_due_today_by_category.each do |category, tasks_due_today| %>
      <h3>in <%= category.name %></h3>
      <ul>
        <% tasks_due_today.each do |task| %>
          <li>
            <%= task.title %> - <%= task.description %> - <%= task.due_date.strftime('%B %e, %Y') %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <p>No tasks due today.</p>
  <% end %>
</section>