<h1>Edit Task</h1>

<%= form_for [@category, @task], url: category_task_path(@category, @task.id), method: :patch do |f| %>
  <%= render 'shared/errors', object: f.object %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :due_date %>
    <%= f.date_field :due_date %>
  </div>

  <%= f.submit 'Update Task' %>
<% end %>

<%= link_to 'Back', category_task_path(@category, @task) %>
